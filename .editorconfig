root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.tigrc]
indent_style = tab

[{Makefile,**.mk}]
indent_style = tab

[*.pryrc]
indent_size = 2

[*.{vim,toml}]
indent_size = 2

[*.yml]
indent_size = 2

[package.json]
indent_size = 2
